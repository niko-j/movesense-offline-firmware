{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash Firmware",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/flash.sh",
            "problemMatcher": []
        },
        {
            "label": "Build (debug)",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-it",
                "movesense-build-env",
                "/movesense/scripts/build.sh",
                "debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (release)",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-it",
                "movesense-build-env",
                "/movesense/scripts/build.sh",
                "release"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Start Docker Build Environment",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "-it",
                "--rm",
                "-v",
                "${workspaceFolder}:/movesense:delegated",
                "--name",
                "movesense-build-env",
                "movesense/sensor-build-env:2.2"
            ],
            "problemMatcher": []
        },
        {
            "label": "Debug (verbose)",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/debug.sh",
            "args": [
                "4",
                "/dev/cu.usbserial-B002JL5D"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "Debug (info)",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/debug.sh",
            "args": [
                "3",
                "/dev/cu.usbserial-B002JL5D"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}